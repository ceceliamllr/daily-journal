
<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <h1><%=post.title%></h1>
    <div>
      <%=post.content.substring(0, 100) + " ..."%>
      <a href="/posts/<%=post.title%>">Read More</a>
      <form class="" action="/delete" method="post">
        <button type="submit" name="button" value="<%= post._id %>" >Delete </button>
      </form>
    </div>


  <% }) %>
  <br />
  <br />

  <a class="btn btn-primary" href="compose">Compose a Daily Post</a>

<%- include("partials/footer"); -%>
